<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OnlineMusicTopList"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        >

        <ImageButton
            android:id="@+id/top_list_to_index"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@color/red"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_return">

        </ImageButton>

        <TextView
            android:id="@+id/top_list_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/playlist"
            android:textSize="22sp"
            android:textColor="@color/titleLight"
            android:layout_weight="1"
            android:lineHeight="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/top_list_pic"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

        </ImageView>

        <LinearLayout
            android:id="@+id/top_list_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/top_list_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/top_list_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/top_list_introduce"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </TextView>

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/top_list_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>
</LinearLayout>